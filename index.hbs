{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
            

<header class="main-header">
    <nav class="main-nav overlay clearfix" style="z-index: 1;">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /><span>Blog</span></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>


    <section class="reset cd-hero" >
        <ul class="reset cd-hero-slider autoplay">
            <li class="reset selected" style="background-image: url({{asset "images/MazeMapStOlav_StigThomas_2.jpg"}})">
                <div class="reset vertical cd-full-width">

                    <div class="main-header-content inner ">
                        <h1 class="page-title">{{@blog.title}}</h1>
                        <h2 class="page-description">{{@blog.description}}</h2>
                    </div>

                </div>
            </li>

            <li class="reset" style="background-image: url({{asset "images/mazemap-devices-illustration-1.png"}})">
                <div class="reset cd-full-width">
                    <h2>Title Title</h2>
                    <p>Description and more description and hook</p>
<!--                    <a href="#1" class="reset cd-btn">btn text</a>-->
                </div>
            </li>

            <li class="reset" style="background-image: url({{asset "images/iot-hospital-illustration1.jpg"}})">
                <div class="reset cd-full-width">
                    <h2>another image and title</h2>
                    <p>Description and more description and hook</p>
<!--                    <a href="#1" class="reset cd-btn">btn text</a>-->
                </div>
            </li>

            <!-- other slides here -->

        </ul>

        <div class="cd-slider-nav">
            <nav class="reset">

                <ul class="reset">
                    <li class="reset selected"><a class="reset " href="#0"></a></li>
                    <li class="reset "><a class="reset " href="#1"></a></li>
                    <li class="reset "><a class="reset " href="#2"></a></li>
                    <!-- other navigation items here -->
                </ul>
                <span class="reset cd-marker item-1"></span>
            </nav> 
        </div> 
    </section>


    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
